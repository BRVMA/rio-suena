---
import { Image } from "astro:assets";
import Heading from "../components/Heading.astro";
import Layout from "./Layout.astro";

import fig4 from '../img/fig-4.svg';
import fig5 from '../img/fig-5.svg';

const { title, linkBack } = Astro.props;
---

<Layout title={title} bodyClass="bg-crema text-gris" mainClass="relative">
    {linkBack ? (
        <a href="/blog">
            <Heading clase="mb-10">BLOG</Heading>
        </a>
    ) : (
        <Heading clase="mb-10">BLOG</Heading>
    )}

    <div class="absolute inset-0 -z-10 hidden lg:grid grid-cols-2 w-full h-full">
        <div class="flex flex-col justify-end">
            <Image src={fig4} alt="" class="w-36 xl:w-60" />
        </div>

        <div class="flex flex-col items-end">
            <Image src={fig5} alt="" class="w-40 xl:w-64" />
        </div>
    </div>

    <slot />
</Layout>

<style is:global>
    .post > p {
        text-align: justify;
    }

    .post a {
        color: #7dbccf;
        text-decoration: underline;
    }

    .post ul {
        padding: .5rem;
        list-style: inside disc;
    }

    .post ul p {
        display: inline;
    }

    .post ol {
        list-style: inside decimal;
    }

    .post ol p {
        display: inline;
    }

    .post blockquote p {
      margin: .5rem;
      padding: 12px;
      background: white;
      border-radius: 8px;
    }

    .post blockquote p::before {
      content: '\201C';
    }

    .post blockquote p::after {
      content: '\201D';
    }
</style>
