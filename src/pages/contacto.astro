---
import Layout from 'src/layouts/Layout.astro';
import { Image } from 'astro:assets';
import Heading from '@components/Heading.astro';

import fondo from '@assets/fondo-contacto.png';
import ig from '@assets/rrss/ig.svg';
import tiktok from '@assets/rrss/tiktok.svg';
import fb from '@assets/rrss/fb.svg';
import logo from '@assets/logo/logo-blanco.svg';

export const prerender = true;
---

<Layout title="Contacto" bodyClass="text-white">
    <Image src={fondo} alt="Imagen de fondo" class="absolute inset-0 -z-10 w-full h-full min-h-screen object-cover"  />

    <div class="flex flex-col lg:flex-row justify-between gap-10 w-full">
        <div class="lg:w-[32rem]">
            <Heading>CONTACTO</Heading>

            <p class="mt-2 text-lg lg:text-2xl leading-snug">
                Temporibus autem quibusdam et aut officiis debitis aut rerum necessitatibus saepe eveniet ut et voluptates repudiandae sint et molestiae non recusandae.
            </p>
        </div>

        <form class="flex flex-col lg:px-32 lg:mt-8 w-full">
            <label for="name" class="text-lg">Nombre</label>
            <input type="text" name="name" class="text-lg lg:text-xl bg-transparent border-b border-white">

            <label for="email" class="mt-4 lg:mt-6 text-lg">Correo</label>
            <input type="email" name="email" class="text-lg lg:text-xl bg-transparent border-b border-white">

            <label for="message" class="mt-4 lg:mt-6 text-lg">Mensaje</label>
            <textarea name="email" rows="3" class="text-lg lg:text-xl bg-transparent border-b border-white leading-tight"></textarea>

            <input
                type="submit"
                value="ENVIAR"
                class="self-end mt-12 px-4 py-1 bg-white rounded-3xl font-light text-xl lg:text-3xl text-gris"
            >
        </form>
    </div>

    <div class="flex justify-between items-end mt-20 w-full">
        <div class="flex flex-col justify-between items-center gap-4 lg:gap-6">
            <div class="flex items-stretch gap-6 lg:mt-20 w-full h-7">
                <Image src={ig} alt="Instagram" class="w-auto" />
                <Image src={tiktok} alt="Tik Tok" class="w-auto" />
                <Image src={fb} alt="Facebook" class="w-auto" />
            </div>

            <div class="flex flex-col font-light text-lg lg:text-2xl">
                <a href="tel:+56987654321">+569 8765 4321</a>
                <a href="mailto:quepasa@brvma.net">quepasa@brvma.net</a>
            </div>
        </div>

        <Image src={logo} alt="Logo Si El RÃ­o Suena" width="96" height="96" />
    </div>
</Layout>
